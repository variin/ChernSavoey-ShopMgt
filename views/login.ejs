<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <link href='https://fonts.googleapis.com/css?family=Kanit:400,300&subset=thai,latin' rel='stylesheet'
        type='text/css'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" http-equiv="Content-Type"
        content="text/html; charset=UTF-8">
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/loginshop.css">
    <title>Sign in & Sign up Form</title>
</head>

<body>
    <div class="container">
        <div class="forms-container">


            <div class="signin-signup">
                <form action="Login" class="sign-in-form" method="POST">
                    <div class="limiter">
                        <div class="container-login100">
                            <div class="wrap-login100">
                                <img src="/images/icon_chsv.png" alt="chernsavoey-logo">
                            </div>
                        </div>
                    </div>

                    <!-- sign in -->
                    <h2 class="title">Sign in</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <td><input type="text" name="id" placeholder="Username">
                        </td>
                    </div>

                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <td><input type="password" name="password" id="password" placeholder="Password"></td>
                    </div>
                    <!-- <td style="color: red">${message}</td> -->
                    <input type="submit" name="login-submit" id="login-submit" value="Login" class="btn solid" />
                    <!-- <p class="social-text">Or Sign in with social platforms</p> -->

                </form>

                <!-- sign up -->
                <form action="Register" class="sign-up-form" method="POST">
                    <h2 class="title">Sign up</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" name="username" id="username" placeholder="Username" required />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="name" name="name" id="email" placeholder="Name" required />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="email" name="email" id="email" placeholder="Email" required />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" name="password" id="password" placeholder="Password" required />
                    </div>
                    <!-- <td style="color: red">${message}</td> -->
                    <input type="submit" name="register-submit" id="register-submit" class="btn" value="Register Now" />
                    <p class="social-text" href="ForgotPassword.jsp">Forgot Password</p>
                    <p class="social-text">Or Sign up with social platforms</p>

                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>Welcome to Chernsavoey Shop Management</h3>
                    <p> You can be the part of Chernsavoey <br>and also manage your shop by yourself</p>
                    <button class="btn transparent" id="sign-up-btn"> Sign up </button>
                    <div id="img"> <img src="/images/shop-vector.svg" alt="chernsavoey-logo"></div>
                   
                </div>

            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3> Welcome to Chernsavoey Shop Management Members</h3>
                    <p></p>
                    <button class="btn transparent" id="sign-in-btn">Sign in</button>
                    <div id="img"> <img src="/images/shop-vector.svg" alt="chernsavoey-logo"></div>
                </div>
            </div>
        </div>
    </div>



    <script src="/javascripts/loginShop.js"></script>

</body>

</html>